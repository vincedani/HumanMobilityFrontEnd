<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        style="@style/ListItemLayoutStyle">

        <ImageView
            android:id="@+id/item_place_left_icon"
            style="@style/ListItemLeftIconStyle"
            android:src="@drawable/ic_place_18dp"/>

        <LinearLayout
            style="@style/ListItemInnerLayoutStyle">

            <TextView
                android:id="@+id/item_place_title"
                style="@style/ListItemTitleStyle"
                android:text="{Title}"/>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="center"
            android:src="@drawable/ic_remove_24dp"/>

    </LinearLayout>

    <View
        style="@style/DividerStyle.Icon"/>

</LinearLayout>

