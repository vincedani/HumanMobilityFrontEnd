<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <View
        android:id="@+id/item_top_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"/>

    <LinearLayout
        style="@style/ListItemLayoutStyle"
        android:background="@color/transparent"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/item_icon"
            style="@style/ListItemLeftIconStyle"
            android:src="@drawable/ic_home_18dp"/>

        <LinearLayout
            style="@style/ListItemInnerLayoutStyle">

            <TextView
                android:id="@+id/item_title"
                style="@style/ListItemTitleStyle"
                android:text="{Title}"/>

            <TextView
                android:id="@+id/item_desc"
                style="@style/ListItemDescStyle"
                android:text="{Description}"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_right_desc"
            style="@style/ListItemRightInfoStyle"
            android:text="{0}"/>

    </LinearLayout>

    <View
        android:id="@+id/item_divider"
        style="@style/DividerStyle.Icon"/>

</LinearLayout>